    <head>
        <style>
            h1 {
                color: white;
                font-family: 'Bungee', sans-serif;
                }
            .navbar navbar-light{
                display-flex: flex;
                
            }
            .principal-items{
                display: flex;
                justify-content: space-evenly;
                text-align: center;
                flex-direction: row;
                padding: 30px 0px;
            }
            .task-description{
                display: flex;
                flex-direction: column;
                flex-wrap: wrap;
                justify-content: start;
                padding-top: 50px
            }
            .edit-btn p{  
                border-radius: 0.25rem;
                width: 71.63;
                height: 38px;
                margin-right: 10px;
                transition: font-size 0.7s ease
                background-color: rgb(40, 167, 69);
                border-color: rgb(40, 167, 69);
            }
            .edit-btn p:hover{
                background-color: rgb(229, 30, 235);
                border-color: rgb(229, 30, 235);
                font-weight: revert;
                text-shadow: -3px -3px rgb(155, 48, 255);
            }
            p {
                color: white;
                font-size: x-large;
            }
        </style>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>

    <body>
        <body  style="background-color: #0C3640;">
        <div class"principal_show" style="display flex">
            <div class"nav-bar-div">
                <nav class="navbar navbar-light"style="color:white; background-color: #94159B; height: 140px;justify-content: flex-end;">
                    <div style="display: flex; flex-direction: column; padding-right: 70px">
                        <p style="margin-bottom: 10px;"><%= link_to "Back to menu", root_path, style:"color: white; text-decoration: none; font-weight: bold; font-size: x-large;" %></p>
                        <p><%= link_to "Back to your list", tasks_path, style:"color: white; text-decoration: none; font-weight: bold; font-size: x-large;" %></p>
                    </div>
                </nav>
            </div>

            <%yield%>

            <div class="principal-items">
                <div class="task-description">
                    <div style="padding-bottom: 30px;">
                        <h1>Created at</h1>
                        <p><%=@task.created_at.strftime("%d/%m/%y")%></p>
                    </div>
                    <div style="text-align: start; max-width: 600px;">
                        <h1><%=@task.name%></h1>
                        <p><%=simple_format(@task.description)%></p>
                    </div>

                    <div class="buttons_style" style="display: flex; justify-content: center; padding-top: 10%;">
                        <%= link_to edit_task_path(@task),class:"edit-btn", style:"text-decoration: none;"  do %>
                            <p>Edit</p>
                        <%end%>
                        <%= button_to "Delete", @task, method: :delete, class:"btn btn-danger" %>
                    </div>
                </div>
                <% task_image_url=(@task.url_image.present? && @task.url_image.include?(".jpg" || ".jpeg"))? @task.url_image : 'https://i.pinimg.com/736x/e9/05/1a/e9051a7db6d278fac69e6f17cb443ff6.jpg' %>
                <%= image_tag task_image_url, style:"width: auto;
                height: 50%; padding-top: 30px; border: hidden;
                border-radius: 10%;
                }"%>
            </div>
        </div>
    </body>