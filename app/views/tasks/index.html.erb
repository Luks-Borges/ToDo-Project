<head>
  <style>
  .plus_btn {
    background-color: rgb(229, 30, 235);
    text-shadow: -3px -3px rgb(155, 48, 255);
    margin-left: 48px;
    margin-top: 10px;
    text-align: center;
    border-radius: 50%;
    display: flex;
    max-width: 43px;
    height: 43px;
    justify-content: center;
  }
    .plus_btn:hover{
        background-color: rgb(0, 123, 255);
        max-width: 48px;
        height: 46px;
      }
  </style>
</head>
<body> 
  <div>
    <%= link_to new_task_path, style:"text-decoration: none;"  do %>
    <h1 class="plus_btn">+</h1>
    <%end%>
  </div>

  <div id="tasks">
    <% @tasks.each do |task| %>
      <%= render task %>
    <% end %>
  </div>
</body>